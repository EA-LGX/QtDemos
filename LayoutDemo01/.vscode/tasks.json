{
    "tasks": [
        // 任务：qmake 根据.pro文件生成 Makefile，通常是.pro文件改动后才需要执行
        {
            "type": "shell",
            "label": "qmake",
            "options": {
                "cwd": "${fileDirname}\\build"
            },
            "command": "qmake",
            "args": [
                "../*.pro"
            ],
        },
        // 任务：编译 每次修改代码后都需要执行
        {
            "label": "make",
            "options": {
                "cwd": "${fileDirname}\\build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [
                "-j16",
                "debug"
            ],
            "dependsOn": [
                //"qmake"
            ]
        },
        // 任务：清理
        {
            "label": "clean",
            "options": {
                "cwd": "${fileDirname}\\build"
            },
            "command": "make",
            "args": [
                "clean"
            ]
        }
    ],
    "version": "2.0.0"
}